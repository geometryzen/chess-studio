{
    "name": "chess-studio",
    "version": "1.0.0",
    "private": true,
    "description": "Chess Mastery through Computation",
    "main": "./dist/main/index.js",
    "type": "commonjs",
    "scripts": {
        "start": "concurrently \"npm run build:dev:all\" \"ng serve renderer\" \"wait-on http://localhost:4200 && electron .\"",
        "start-xxx": "electron .",
        "clean": "npx rimraf dist release-builds node_modules .angular",
        "build:dev:renderer": "ng build",
        "build:prod:renderer": "ng build --configuration production",
        "build:dev:main": "tsc --project ./src/main/tsconfig.json",
        "build:prod:main": "tsc --project ./src/main/tsconfig.json",
        "build:dev:preload": "tsc --project ./src/preload/tsconfig.json",
        "build:prod:preload": "tsc --project ./src/preload/tsconfig.json",
        "build:dev:all": "npm run build:dev:renderer && npm run build:dev:main && npm run build:dev:preload",
        "build:prod:all": "npm run build:prod:renderer && npm run build:prod:main && npm run build:prod:preload",
        "format:check": "prettier --check '**/*.{js,ts,tsx,css,yml,json}'",
        "format:write": "prettier --write '**/*.{js,ts,tsx,css,yml,json}'",
        "update:electron": "npm update electron electron-packager",
        "update:angular": "ng update @angular/cli @angular/core",
        "update:material": "npm update @angular/material @angular/cdk",
        "test:test": "ng test",
        "test:lint": "ng lint",
        "test:e2e": "ng e2e",
        "package": "electron-packager . chess-studio --asar --overwrite --prune=true --derefSymlinks=false --ignore=\"/node_modules|/src|.vscode|.editorconfig|.gitignore|.map|angular.json|README.md|package-lock.json|LICENSE\" --out=release-builds",
        "release": "npm run build:prod:all  && npm run package"
    },
    "dependencies": {
        "@angular/animations": "19.0.5",
        "@angular/cdk": "19.0.4",
        "@angular/common": "19.0.5",
        "@angular/compiler": "19.0.5",
        "@angular/core": "19.0.5",
        "@angular/forms": "19.0.5",
        "@angular/platform-browser": "19.0.5",
        "@angular/platform-browser-dynamic": "19.0.5",
        "@angular/platform-server": "19.0.5",
        "@angular/router": "19.0.5",
        "debug": "4.4.0",
        "electron-squirrel-startup": "1.0.1",
        "express": "4.21.2",
        "lodash": "4.17.21",
        "rxjs": "7.8.1",
        "tslib": "2.8.1",
        "zone.js": "0.15.0"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "19.0.6",
        "@angular/animations": "19.0.5",
        "@angular/cdk": "19.0.4",
        "@angular/cli": "19.0.6",
        "@angular/common": "19.0.5",
        "@angular/compiler": "19.0.5",
        "@angular/compiler-cli": "19.0.5",
        "@angular/core": "19.0.5",
        "@angular/forms": "19.0.5",
        "@angular/language-service": "19.0.5",
        "@angular/material": "19.0.4",
        "@angular/platform-browser": "19.0.5",
        "@angular/platform-browser-dynamic": "19.0.5",
        "@angular/router": "19.0.5",
        "@types/debug": "4.1.12",
        "@types/electron-squirrel-startup": "1.0.2",
        "@types/jasmine": "5.1.5",
        "@types/jasminewd2": "2.0.13",
        "@types/lodash": "4.17.13",
        "@types/node": "22.10.2",
        "codelyzer": "6.0.2",
        "concurrently": "9.1.0",
        "electron": "33.2.1",
        "electron-devtools-installer": "4.0.0",
        "electron-packager": "17.1.2",
        "jasmine-core": "5.5.0",
        "jasmine-spec-reporter": "7.0.0",
        "karma": "6.4.4",
        "karma-chrome-launcher": "3.2.0",
        "karma-coverage-istanbul-reporter": "3.0.3",
        "karma-jasmine": "5.1.0",
        "karma-jasmine-html-reporter": "2.1.0",
        "npm-run-all": "4.1.5",
        "prettier": "3.4.2",
        "protractor": "7.0.0",
        "rxjs": "7.8.1",
        "ts-loader": "9.5.1",
        "ts-node": "10.9.2",
        "tslib": "2.8.1",
        "typescript": "5.7.2",
        "zone.js": "0.15.0",
        "wait-on": "^8.0.1"
    }
}